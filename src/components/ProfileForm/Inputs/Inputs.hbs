<li>
    <label for="{{id}}">{{title}}</label>
    <input 
    id="{{id}}" 
    name="{{id}}"
    {{#if type}}type="{{type}}"{{else}}type="text"{{/if}} 
    value="{{value}}" 
    {{#if dataEdit}}
    class="edit"
    {{else}} 
    disabled="disabled"
    {{/if}} />
    {{#if error}}
        <label class="input-error" for={{id}}>{{error}}</label>
    {{else}}
    {{/if}}
</li>
